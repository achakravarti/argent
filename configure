#!/bin/sh


info() {
	echo "[INFO]    $1"
}


error() {
	echo "[ERROR]   $1"
	exit
}


copyright() {
	echo "Argent Library Copyright (C) 2021 Abhishek Chakravarti"
	echo "This program comes with ABSOLUTELY NO WARRANTY; for details see LICENSE."
	echo "This is free software, and you are welcome to redistribute it"
	echo "under certain conditions; see LICENSE for details."
	echo ""
}


os() {
	OS=`uname`
	if [ $OS = "Linux" ] ; then
		info "GNU/Linux detected..."
	elif [ $OS = "FreeBSD" ] ; then
		info "FreeBSD detected..."
	else
		error "Unsupported OS; use FreeBSD or a Linux distro."
	fi
}


depmet() {
	if [ $SHELL = "/bin/csh" ] ; then
		if which $1 2>/dev/null ; then
			info "$1 found..."
		else
			error "$1 not found; install $2 first."
		fi
	else
		if which $1 >&/dev/null ; then
			info "$1 found..."
		else
			error "$1 not found; install $2 first."
		fi
	fi
}


copyright
info "Starting Argent build configuration..."
os
depmet cc "gcc or clang"




# Determine shell

if [ $SHELL = "/bin/bash" ] ; then
	REDIRECT=`2>&1`
	info "bash detected..."
elif [ $SHELL = "/bin/csh" ] ; then
	REDIRECT=`>&`
	info "csh detected..."
else
	error "Unsupported shell; use bash/dash/csh/tcsh."
fi


# Check if required dependencies installed

#if which cc >> /dev/null $REDIRECT ; then
if which cc >&/dev/null ; then
	info "cc found..."
else
	error "cc not found; install gcc or clang."
fi

